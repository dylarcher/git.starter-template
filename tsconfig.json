{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "incremental": true,
    "inlineSourceMap": true,
    "noEmit": false,
    "outDir": "./dist/esm",
    "resolveJsonModule": true,
    "rootDirs": [
      "src",
      "dist"
    ],
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "@types/node",
      "@types/vscode",
      "c8/experimental",
      "c8/globals"
    ]
  }
}