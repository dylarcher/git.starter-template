{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "ignore": [
      "node_modules/**",
      ".git/**",
      "build/**",
      "dist/**",
      "coverage/**",
      "test/coverage/**",
      ".tmp/**",
      ".temp/**",
      ".cache/**",
      "logs/**",
      "*.log",
      ".vscode/**",
      ".idea/**",
      ".idx/**",
      ".vscode-test/**",
      ".vs/**",
      "lib/**",
      ".github/**",
      "docs/**",
      "scripts/**",
      "test/**"
    ]
  },
  "formatter": {
    "bracketSpacing": true,
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useFilenamingConvention": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
