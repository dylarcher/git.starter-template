{
  "$schema": "https://json.schemastore.org/commitlintrc.json",
  "extends": [
    "@commitlint/config-conventional"
  ],
  "ignore": [
    "node_modules/**",
    ".git/**",
    "build/**",
    "dist/**",
    "coverage/**",
    "test/coverage/**",
    ".tmp/**",
    ".temp/**",
    ".cache/**",
    "logs/**",
    "*.log",
    ".vscode/**",
    ".idea/**",
    ".idx/**",
    ".vscode-test/**",
    ".vs/**",
    "lib/**",
    ".github/**",
    "docs/**",
    "scripts/**",
    "test/**"
  ]
}
